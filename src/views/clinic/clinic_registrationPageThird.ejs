      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"
    />
    <style>
      :root {
        --primary-blue: #0d6efd;
        --light-blue: #e6f0ff;
        --dark-blue: #0a58ca;
      }

      body {
        background-color: #f8f9fa;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }

      .registration-container {
        max-width: 800px;
        margin: 40px auto;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        padding: 30px;
      }

      .registration-header {
        text-align: center;
        margin-bottom: 30px;
        color: var(--primary-blue);
      }

      .section-header {
        color: var(--primary-blue);
        margin-bottom: 20px;
        font-weight: 600;
      }

      .form-label {
        font-weight: 600;
        color: #495057;
      }

      .form-check-label {
        font-weight: normal;
      }

      .timing-row {
        background-color: var(--light-blue);
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 15px;
      }

      .day-label {
        font-weight: 600;
        min-width: 100px;
      }

      .agreement-section {
        margin-top: 30px;
        margin-bottom: 30px;
      }

      .agreement-box {
        max-height: 300px;
        overflow-y: auto;
        padding: 20px;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        background-color: #f8f9fa;
        margin-bottom: 20px;
      }

      .finish-btn {
        background-color: var(--primary-blue);
        color: white;
        padding: 10px 30px;
        border: none;
        border-radius: 6px;
        font-weight: 600;
        margin-top: 20px;
        transition: all 0.3s;
      }

      .finish-btn:hover {
        background-color: var(--dark-blue);
        transform: translateY(-2px);
      }

      .step-indicator {
        display: flex;
        justify-content: center;
        margin-bottom: 30px;
      }

      .step {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        background-color: #dee2e6;
        color: #6c757d;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 10px;
        font-weight: bold;
      }

      .step.active {
        background-color: var(--primary-blue);
        color: white;
      }

      .step-line {
        height: 3px;
        width: 50px;
        background-color: #dee2e6;
        margin-top: 17px;
      }

      .step-line.active {
        background-color: var(--primary-blue);
      }

      .time-inputs {
        display: flex;
        align-items: center;
        gap: 10px;
      }

      .error-message {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 5px;
        font-weight: 500;
        display: none;
      }

      .invalid-field {
        border-color: #dc3545 !important;
      }

      .invalid-field ~ .error-message {
        display: block;
      }

      @media (max-width: 768px) {
        .registration-container {
          margin: 20px;
          padding: 20px;
        }

        .step-indicator {
          margin-bottom: 20px;
        }

        .step {
          width: 30px;
          height: 30px;
          margin: 0 5px;
        }

        .step-line {
          width: 30px;
        }

        .time-inputs {
          flex-direction: column;
          align-items: flex-start;
          gap: 5px;
        }

        .time-label {
          margin-top: 10px;
        }

        .day-timing-controls {
          flex-direction: column;
        }
      }
    </style>
  </head>
  <body>
    <div class="container registration-container">
      <!-- Steps indicator -->
      <div class="step-indicator">
        <div class="step active">1</div>
        <div class="step-line active"></div>
        <div class="step active">2</div>
        <div class="step-line active"></div>
        <div class="step active">3</div>
      </div>

      <div class="registration-header">
        <h2>Final Registration Step</h2>
        <p class="text-muted">
          Please specify your clinic hours and accept the agreement
        </p>
      </div>

      <form id="final-registration-form">
        <!-- Operation Timings Section -->
        <div class="timing-section">
          <h4 class="section-header">Clinic Operation Hours</h4>

          <!-- 24x7 Option -->
          <div class="form-check mb-4">
            <input
              class="form-check-input"
              type="radio"
              name="operationHours"
              id="hours24x7"
              value="24x7"
            />
            <label class="form-check-label" for="hours24x7">
              <span class="fw-bold">24x7 Operation</span> - Clinic is open all
              days, all hours
            </label>
          </div>

          <!-- Custom Hours Option -->
          <div class="form-check mb-4">
            <input
              class="form-check-input"
              type="radio"
              name="operationHours"
              id="hoursCustom"
              value="custom"
              checked
            />
            <label class="form-check-label" for="hoursCustom">
              <span class="fw-bold">Custom Hours</span> - Specify opening and
              closing times for each day
            </label>
          </div>

          <!-- Day-wise Timing Controls -->
          <div id="customHoursSection">
            <!-- Monday -->
            <div class="timing-row">
              <div
                class="d-flex flex-wrap align-items-center day-timing-controls"
              >
                <div class="day-label col-md-2">Monday</div>
                <div class="col-md-3">
                  <div class="form-check form-switch">
                    <input
                      class="form-check-input day-toggle"
                      type="checkbox"
                      id="mondayOpen"
                      checked
                      data-day="monday"
                    />
                    <label class="form-check-label" for="mondayOpen"
                      >Open</label
