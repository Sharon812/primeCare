    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      // Operation Hours Toggle
      const hours24x7 = document.getElementById("hours24x7");
      const hoursCustom = document.getElementById("hoursCustom");
      const customHoursSection = document.getElementById("customHoursSection");

      hours24x7.addEventListener("change", function () {
        if (this.checked) {
          customHoursSection.style.display = "none";
        }
      });

      hoursCustom.addEventListener("change", function () {
        if (this.checked) {
          customHoursSection.style.display = "block";
        }
      });

      // Day Toggle Switches
      const dayToggles = document.querySelectorAll(".day-toggle");
      dayToggles.forEach((toggle) => {
        toggle.addEventListener("change", function () {
          const day = this.getAttribute("data-day");
          const hoursDiv = document.getElementById(`${day}Hours`);

          if (this.checked) {
            hoursDiv.style.display = "block";
          } else {
            hoursDiv.style.display = "none";
          }
        });
      });

      // Form Validation
      const agreementCheck = document.getElementById("agreementCheck");

      agreementCheck.addEventListener("change", function () {
        if (this.checked) {
          this.classList.remove("invalid-field");
        } else {
          this.classList.add("invalid-field");
        }
      });

      // Form Submission
      document
        .getElementById("final-registration-form")
        .addEventListener("submit", function (e) {
          e.preventDefault();

          // Validate agreement checkbox
          if (!agreementCheck.checked) {
            agreementCheck.classList.add("invalid-field");
            return;
          }

          // Collect operation hours data
          const operationHoursData = {};

          if (hours24x7.checked) {
            operationHoursData.type = "24x7";
          } else {
            operationHoursData.type = "custom";
            operationHoursData.days = {};

            const days = [
              "monday",
              "tuesday",
              "wednesday",
              "thursday",
              "friday",
              "saturday",
              "sunday",
            ];
            days.forEach((day) => {
              const isOpen = document.getElementById(`${day}Open`).checked;

              if (isOpen) {
                const from = document.getElementById(`${day}From`).value;
                const to = document.getElementById(`${day}To`).value;

                operationHoursData.days[day] = {
                  isOpen: true,
                  from: from,
                  to: to,
                };
              } else {
                operationHoursData.days[day] = {
                  isOpen: false,
                };
              }
            });
          }

          // Here you would typically send the data to your server
          console.log("Registration data:", operationHoursData);

          // Show success message
          alert("Registration completed successfully!");

          // Redirect to success page or dashboard
          // window.location.href = 'registration-success.html';
        });
