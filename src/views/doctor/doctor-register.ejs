<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Doctor Registration</title>
    <link rel="stylesheet" href="/css/doctor/register.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('../layouts/doctor/header') %>

    <div class="page-wrapper">
      <nav class="navbar">
        <div class="nav-brand">
          <img
            src="/assets/logo-icon1.png"
            alt="PrimeCare Logo"
            class="brand-logo"
          />
          <div class="brand-text">
            <span class="brand-name">PrimeCare</span>
            <span class="brand-subtitle">Doctor Panel</span>
          </div>
        </div>
      </nav>

      <div class="content-wrapper">
        <div class="register-container" data-aos="fade-up">
          <div
            class="register-content"
            data-aos="fade-right"
            data-aos-delay="200"
          >
            <div class="form-header">
              <h1>Create Account</h1>
              <p>Get started with PrimeCare</p>
            </div>

            <div class="register-form-wrapper">
              <form
                class="register-form"
                id="doctorRegisterForm"
                method="post"
                action="/doctor/register"
              >
                <div class="form-row">
                  <div class="input-group">
                    <i class="fas fa-user"></i>
                    <input type="text" name="name" placeholder="Full Name" />
                    <div class="error-message"></div>
                  </div>
                  <div class="input-group">
                    <i class="fas fa-envelope"></i>
                    <input
                      type="email"
                      name="email"
                      placeholder="Email Address"
                    />
                    <div class="error-message"></div>
                  </div>
                </div>

                <div class="input-group">
                  <i class="fas fa-phone"></i>
                  <input type="tel" name="phone" placeholder="Phone Number" />
                  <div class="error-message"></div>
                </div>

                <div class="form-row">
                  <div class="input-group">
                    <i class="fas fa-lock"></i>
                    <input
                      type="password"
                      name="password"
                      placeholder="Password"
                    />
                    <div class="error-message"></div>
                  </div>
                  <div class="input-group">
                    <i class="fas fa-lock"></i>
                    <input
                      type="password"
                      name="confirmPassword"
                      placeholder="Confirm Password"
                    />
                    <div class="error-message"></div>
                  </div>
                </div>

                <div class="terms-section">
                  <label class="checkbox-container">
                    <input type="checkbox" required />
                    <span class="checkmark"></span>
                    <span class="terms-text"
                      >I agree to the <a href="#">Terms of Service</a></span
                    >
                  </label>
                </div>

                <button type="submit" class="register-btn" disabled>
                  Create Account <i class="fas fa-arrow-right"></i>
                </button>

                <div class="login-section">
                  <span class="divider">Already have an account?</span>
                  <a href="/doctor/login" class="login-link">
                    Sign in to your account <i class="fas fa-sign-in-alt"></i>
                  </a>
                </div>
              </form>
            </div>
          </div>

          <div class="register-image" data-aos="fade-left">
            <div class="overlay-content">
              <h2>Leading Healthcare Innovation</h2>
              <p>
                Join our network of healthcare professionals and transform
                patient care
              </p>
              <div class="feature-list" data-aos="fade-up" data-aos-delay="400">
                <div class="feature-item">
                  <i class="fas fa-user-md"></i>
                  <span>Professional Healthcare Platform</span>
                </div>
                <div class="feature-item">
                  <i class="fas fa-calendar-check"></i>
                  <span>Easy Appointment Management</span>
                </div>
                <div class="feature-item">
                  <i class="fas fa-chart-line"></i>
                  <span>Growth & Analytics</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('../layouts/doctor/footer') %>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="/scripts/doctor/register.js"></script>
    <script>
      AOS.init({
        duration: 1000,
        once: true,
      });
    </script>
  </body>
</html>
